<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2sp"
    android:layout_marginTop="8sp">


    <RelativeLayout
        android:id="@+id/quoteRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24sp"
        android:layout_marginLeft="24sp"
        android:background="@drawable/list_bg"
        android:padding="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/quoteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/poppinsmedium"
            android:text="Drug Name Title"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:lines="2"
            android:ellipsize="end"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/quoteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quoteText"
            android:fontFamily="@font/poppinsmedium"
            android:lineSpacingExtra="8sp"
            android:text="Lorem"
            android:textColor="#FF9100"
            android:textSize="8sp"
            android:gravity="right"
            android:lines="1"
            android:ellipsize="end"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/quoteLink"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/quoteName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="16sp"
            android:layout_marginRight="16sp"
            android:textColor="#686868"
            android:textSize="11sp"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="@font/poppinsmedium"
            android:text="18725312563812" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>