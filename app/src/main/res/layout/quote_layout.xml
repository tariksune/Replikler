<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10sp">

        <RelativeLayout
            android:id="@+id/quoteRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp">

            <TextView
                android:id="@+id/quoteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Drug Name Title"
                android:textAllCaps="true"
                android:textColor="#003554"
                android:textSize="13sp"
                android:gravity="center"
                android:lines="3"
                android:ellipsize="end"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/quoteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quoteText"
                android:fontFamily="@font/poppinsmedium"
                android:lineSpacingExtra="4sp"
                android:text="Lorem"
                android:textColor="@color/colorPrimary"
                android:textSize="8sp"
                android:textAllCaps="true"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/quoteLink"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/quoteName"
                android:fontFamily="@font/poppinsmedium"/>

        </RelativeLayout>
</androidx.cardview.widget.CardView>